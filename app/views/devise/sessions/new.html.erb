<div>
  <%= render partial: "shared/navbar", locals: {variable: 'LOGIN', path: root_path } %>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div>
    <%= f.email_field :email, autofocus: true, placeholder: :email, class: 'form-field', autocomplete: "email" %>
  </div>

  <div>
    <%= f.password_field :password, placeholder: :password, class: 'form-field', autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Log in", class: 'devise-btn log-in-btn' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
